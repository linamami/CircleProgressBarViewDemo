<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleprogressbarview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.ywp.circleprogressbarviewdemo.CircleProgressBarView
        android:id="@+id/cpb_progress"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        circleprogressbarview:backColor="#84dcd0"
        circleprogressbarview:color="#f408ec"
        circleprogressbarview:lineWidth="5dp"
        circleprogressbarview:style="FILL"
        circleprogressbarview:textSize="15sp"
        circleprogressbarview:useAnim="true"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:onClick="add"
        android:text="强化 + 10"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="19dp"
        android:layout_marginRight="19dp"
        android:onClick="reduce"
        android:text="强化 - 10"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:onClick="onClick"
        android:text="一键满级"/>

    <Switch
        android:id="@+id/switch_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="动画效果开关"
        android:layout_below="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"/>

    <Switch
        android:text="样式效果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_style"
        android:layout_alignBaseline="@+id/switch_state"
        android:layout_alignBottom="@+id/switch_state"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"/>


</RelativeLayout>
